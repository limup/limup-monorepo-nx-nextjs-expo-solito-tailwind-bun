{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@limup-monorepo-nx-nextjs-expo-solito-tailwind-bun/features": [
        "../../packages/features/dist"
      ],
      "@limup-monorepo-nx-nextjs-expo-solito-tailwind-bun/features/users": [
        "../../packages/features/dist/lib/users"
      ],
      "@limup-monorepo-nx-nextjs-expo-solito-tailwind-bun/features/*": [
        "../../packages/features/*"
      ],
      "@limup-monorepo-nx-nextjs-expo-solito-tailwind-bun/ui": [
        "../../packages/ui/src"
      ],
      "@limup-monorepo-nx-nextjs-expo-solito-tailwind-bun/ui/*": [
        "../../packages/ui/*"
      ],
      "@limup-monorepo-nx-nextjs-expo-solito-tailwind-bun/utils": [
        "../../packages/utils/src"
      ],
      "@limup-monorepo-nx-nextjs-expo-solito-tailwind-bun/utils/*": [
        "../../packages/utils/*"
      ]
    },
    "types": ["jest", "node"],
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "include": [
    "../../apps/next-app/.next/types/**/*.ts",
    "../../dist/apps/next-app/.next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    ".next",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/features"
    }
  ]
}
